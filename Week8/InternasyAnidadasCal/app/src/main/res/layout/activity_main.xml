<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:hint="Primer Numero"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="176dp"
        android:ems="10"
        android:hint="Segundo Numero"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCal"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="184dp"
        android:onClick="calcular"
        android:text="Calcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNum2" />

    <TextView
        android:id="@+id/lblMostrar"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCal" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="246dp" />

    <RadioGroup
        android:layout_width="353dp"
        android:layout_height="162dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="228dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbtnSum"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Sumar" />

        <RadioButton
            android:id="@+id/rbtnRes"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Restar" />

        <RadioButton
            android:id="@+id/rbtnMult"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Multiplicar" />

        <RadioButton
            android:id="@+id/rbtnDiv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Dividir" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>